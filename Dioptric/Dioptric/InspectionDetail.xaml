<Window x:Class="Dioptric.InspectionDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dioptric"
        mc:Ignorable="d"
        Title="检查信息" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock HorizontalAlignment="Center"  TextWrapping="Wrap" Text="年龄：" VerticalAlignment="Center" FontSize="16"/>
            <TextBlock HorizontalAlignment="Center"  TextWrapping="Wrap" Text="验光日期：" VerticalAlignment="Center" FontSize="16" Grid.Column="2"/>
            <TextBlock HorizontalAlignment="Center"  TextWrapping="Wrap" Text="睫状肌麻痹方式：" VerticalAlignment="Center" FontSize="16" Grid.Column="4"/>

            <TextBlock Grid.Row=1" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="体重：" VerticalAlignment="Center" FontSize="16" Margin="47,51,37,69"/>
            <TextBlock HorizontalAlignment="Center"  TextWrapping="Wrap" Text="身高：" VerticalAlignment="Center" FontSize="16" Grid.Column="2" Margin="29,52,23,68"/>
            <TextBlock HorizontalAlignment="Center"  TextWrapping="Wrap" Text="备注：" VerticalAlignment="Center" FontSize="16" Grid.Column="4" Margin="10,56,126,63" Grid.ColumnSpan="2"/>

        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock HorizontalAlignment="Center"  TextWrapping="Wrap" Text="体重：" VerticalAlignment="Center" FontSize="16" Margin="47,51,37,69"/>
            <TextBlock HorizontalAlignment="Center"  TextWrapping="Wrap" Text="身高：" VerticalAlignment="Center" FontSize="16" Grid.Column="2" Margin="29,52,23,68"/>
            <TextBlock HorizontalAlignment="Center"  TextWrapping="Wrap" Text="备注：" VerticalAlignment="Center" FontSize="16" Grid.Column="4" Margin="10,56,126,63" Grid.ColumnSpan="2"/>


        </Grid>

        <!--左右眼信息-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"></ColumnDefinition>
                <ColumnDefinition Width="50*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Grid.ColumnSpan="6" Text="左  眼" VerticalAlignment="Center" FontSize="18"/>


            </Grid>

        </Grid>
    </Grid>
</Window>
